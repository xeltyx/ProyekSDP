        <Label Content="Tech" HorizontalAlignment="Left" Margin="118,73,0,0" VerticalAlignment="Top" Height="61" Width="151" FontFamily="Georgia" FontSize="48"/>
        <Button Content="" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="563,18,10,478" Height="42" Width="43" BorderBrush="#FF9999FF">
            <Button.Background>
                <ImageBrush ImageSource="menuicon.png" Stretch="Uniform"/>
            </Button.Background>
            <Button.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Keranjang" />
                    <MenuItem Header="Profile" />
                    <Separator />
                    <MenuItem Header="Logout" />
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <ComboBox x:Name="cbkategori" HorizontalAlignment="Left" Margin="24,200,0,0" VerticalAlignment="Top" Width="178" Height="23"/>
        <TextBox x:Name="tbsearch" HorizontalAlignment="Left" Height="23" Margin="389,200,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="198"/>
        <DataGrid HorizontalAlignment="Left" Height="262" Margin="24,246,0,0" VerticalAlignment="Top" Width="563"/>
    </Grid>
</Page>
