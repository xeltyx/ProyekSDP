                    <ImageBrush ImageSource="next-button.png"/>
                </Button.Background>
            </Button>
            <Button x:Name="prevButton" Content="" HorizontalAlignment="Left" Margin="292,160,0,0" VerticalAlignment="Top" Width="36" Height="34" BorderThickness="0" >
                <Button.Background>
                    <ImageBrush ImageSource="prev-button.png"/>
                </Button.Background>
            </Button>
            <Label x:Name="lblprod4_Copy" Content="Label" HorizontalAlignment="Left" Margin="797,317,0,0" VerticalAlignment="Top" Width="122" />
            <Image x:Name="imgprod4_Copy" HorizontalAlignment="Left" Height="110" Margin="797,194,0,0" VerticalAlignment="Top" Width="122" Source="dummy-img.png" Stretch="Fill"/>
            <Image x:Name="imgprod3_Copy" HorizontalAlignment="Left" Height="110" Margin="650,194,0,0" VerticalAlignment="Top" Width="122" Source="dummy-img.png" Stretch="Fill"/>
            <Image x:Name="imgprod1_Copy" HorizontalAlignment="Left" Height="110" Margin="357,194,0,0" VerticalAlignment="Top" Width="122" Source="dummy-img.png" Stretch="Fill"/>
            <Image x:Name="imgprod2_Copy" HorizontalAlignment="Left" Height="110" Margin="503,194,0,0" VerticalAlignment="Top" Width="122" Source="dummy-img.png" Stretch="Fill"/>
            <Label x:Name="lblprod1_Copy" Content="Label" HorizontalAlignment="Left" Margin="357,317,0,0" VerticalAlignment="Top" Width="122" />
            <Label x:Name="lblprod2_Copy" Content="Label" HorizontalAlignment="Left" Margin="503,317,0,0" VerticalAlignment="Top" Width="122"/>
            <Label x:Name="lblprod3_Copy" Content="Label" HorizontalAlignment="Left" Margin="650,317,0,0" VerticalAlignment="Top" Width="122" />
