            <Button x:Name="btngoto_MainMenu" Content="Back to Main menu" HorizontalAlignment="Left" Margin="503,420,0,0" VerticalAlignment="Top" Width="269" Height="44" Click="btngoto_MainMenu_Click"/>
        </Grid>
        <Label Content="Label" Grid.Column="2" HorizontalAlignment="Left" Height="1" Margin="506,31,-514,0" VerticalAlignment="Top" Width="9"/>
